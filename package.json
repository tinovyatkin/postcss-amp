{
  "name": "postcss-amp",
  "version": "1.0.12",
  "description": "PostCSS plugin to convert CSS according Accelerated Mobile Pages requirements",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "amp",
    "accelerated-mobile-page",
    "mobile"
  ],
  "files": [
    "index.js"
  ],
  "author": "tinovyatkin <tino@vtkn.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinovyatkin/postcss-amp.git"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "bugs": {
    "url": "https://github.com/tinovyatkin/postcss-amp/issues"
  },
  "homepage": "https://github.com/tinovyatkin/postcss-amp",
  "peerDependencies": {
    "postcss": "^6.0.0"
  },
  "devDependencies": {
    "eslint": "^4.1.0",
    "eslint-config-postcss": "^2.0.2",
    "jest": "^20.0.1",
    "eslint-plugin-jest": "^21.0.0",
    "npmpub": "^3.1.0",
    "postcss": "^5.2.12",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-consistent": "^2.0.0",
    "remark-preset-lint-recommended": "^3.0.0"
  },
  "scripts": {
    "release": "npmpub",
    "test": "jest && eslint *.js --ignore-path .gitignore && remark . --quiet --frail"
  },
  "eslintConfig": {
    "plugins": [
      "jest"
    ],
    "extends": "eslint-config-postcss/es5",
    "rules": {
      "jest/no-exclusive-tests": 2,
      "jest/no-identical-title": 2
    },
    "env": {
      "jest": true
    }
  },
  "remarkConfig": {
    "presets": [
      "lint-recommended",
      "lint-consistent"
    ]
  }
}
