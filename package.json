{
  "name": "postcss-amp",
  "version": "1.2.0",
  "description": "PostCSS plugin to convert CSS according Accelerated Mobile Pages requirements",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "amp",
    "accelerated-mobile-page",
    "mobile"
  ],
  "files": [
    "index.js",
    "at-rules.js"
  ],
  "author": "tinovyatkin <tino@vtkn.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinovyatkin/postcss-amp.git"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "bugs": {
    "url": "https://github.com/tinovyatkin/postcss-amp/issues"
  },
  "homepage": "https://github.com/tinovyatkin/postcss-amp",
  "peerDependencies": {
    "postcss": ">= 6"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-config-logux": "^25.0.1",
    "eslint-config-postcss": "^3.0.6",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^23.5.0",
    "npmpub": "^4.1.0",
    "postcss": "^7.0.2",
    "remark-cli": "^5.0.0",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-recommended": "^3.0.2"
  },
  "scripts": {
    "release": "npmpub",
    "test": "jest && eslint *.js --ignore-path .gitignore && remark . --quiet --frail"
  },
  "eslintConfig": {
    "plugins": [
      "jest"
    ],
    "extends": "eslint-config-postcss",
    "rules": {
      "jest/no-identical-title": 2,
      "jest/expect-expect": [
        "error",
        {
          "assertFunctionNames": [
            "expect",
            "run"
          ]
        }
      ]
    },
    "env": {
      "jest": true,
      "es6": true
    }
  },
  "remarkConfig": {
    "presets": [
      "lint-recommended",
      "lint-consistent"
    ]
  }
}
