{
  "name": "postcss-amp",
  "version": "1.4.0",
  "description": "PostCSS plugin to convert CSS according Accelerated Mobile Pages requirements",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "amp",
    "accelerated-mobile-page",
    "mobile"
  ],
  "files": [
    "index.js",
    "at-rules.js"
  ],
  "author": "tinovyatkin <tino@vtkn.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinovyatkin/postcss-amp.git"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "bugs": {
    "url": "https://github.com/tinovyatkin/postcss-amp/issues"
  },
  "homepage": "https://github.com/tinovyatkin/postcss-amp",
  "peerDependencies": {
    "postcss": ">=7"
  },
  "devDependencies": {
    "@logux/eslint-config": "28.2.3",
    "@types/jest": "24.0.15",
    "eslint": "6.0.0",
    "eslint-config-postcss": "3.0.7",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-import-helpers": "1.0.1",
    "eslint-plugin-jest": "22.7.1",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-prefer-let": "1.0.1",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "4.0.0",
    "jest": "24.8.0",
    "postcss": "7.0.17"
  },
  "scripts": {
    "test": "jest && eslint *.js --ignore-path .gitignore"
  },
  "eslintConfig": {
    "plugins": [
      "jest"
    ],
    "extends": "eslint-config-postcss",
    "rules": {
      "jest/no-identical-title": 2,
      "jest/expect-expect": [
        "error",
        {
          "assertFunctionNames": [
            "expect",
            "run"
          ]
        }
      ]
    },
    "env": {
      "jest": true,
      "es6": true
    }
  }
}
